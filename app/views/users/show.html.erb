<div class="container">
    <div class="row">
        <div class="col-xs-6">
            <div class="field">
    		        <%= attachment_image_tag(@user, :profile_image, fallback: "no_image.jpg", height: '200px', width: 'auto', class: "rounded-circle") %>
    		    </div>
            <div class="user-name">
                <h3><%= @user.name %></h3>
                <%= @user.birthday %>
            </div>
            <div class="col-xs-3">
                <% if @user == current_user %>
                <% else %>
                    <%= render partial: 'relationships/follow_button', locals: { user: @user } %>
                <% end%>
            </div>
            <div class="pull-right">
                <% if @user == current_user %>
                    <%= link_to "編集", edit_user_path(@user), class: "glyphicon glyphicon-pencil btn btn-success" %>
                <% end %>
            </div>
        </div>
        <div class="col-xs-6">
            <div class="col-xs-4">
                <%= 'フォロー' %><br>
                <%= link_to followers_user_path(@user) do %>
                    <%= @user.followers.count %>
                <% end %>
            </div>
            <div class="col-xs-4">
                <%= 'フォロワー' %><br>
                <%= link_to following_user_path(@user) do %>
                    <%= @user.following.count %>
                <% end %>
            </div>
            <div class="col-xs-4">
                <%= 'いいね' %><br>
                <%= link_to favorites_path(@favorites) do %>
                　　<%= @user.favorites.count %>
                <% end %>
            </div>
            <div class="introduction">
                <%= @user.introduction %>
            </div>
        </div>
    </div>
    <div class="user-posts">
        <% @posts.each do |post| %>
            <div class="user-posts col-xs-4">
                <div class="col-xs-12 star-body">
                    <div class="inview">
                        <%= link_to post_path(post) do %>
                        <% if post.post_images.present? %>
                          <% post.post_images.first(1).each do |image| %>
                            <%= attachment_image_tag image, :image, :fill, 250, 250 %>
                          <% end %>
                          <% else %>
                            <%= image_tag 'no_image.jpg', size: '250x250' %>
                        <% end %>
                        <% end %>
                    </div>
                    <div><%= post.user.name %></div>
                    <div><%= post.body %></div>
                    <div><%= post.shooting_date %></div>
                </div>
            </div>
        <% end %>
    </div>
</div>