<div class="container">
    <h2>登録情報編集</h2>
    <%= form_with(model:@user, url:user_path, method: :PATCH) do |f| %>
        <div class="field">
            <%= attachment_image_tag @user, :profile_image, id: :img_prev, fallback: "no_image.jpg", height: '250px', width: 'auto' %>
            <%= f.attachment_field :profile_image %>
        </div>
        <div class="field">
            <%= f.label :name %><br>
            <%= f.text_field :name, autofocus: true, autocomplete: "name", class: "form-control" %>
        </div>

        <div class="field">
            <%= f.label :introduction %><br>
            <%= f.text_area :introduction, autofocus: true, autocomplete: "introduction", class: "form-control"   %>
        </div>

        <div class="field">
            <%= f.label :birthday %><br>
            <%= f.text_field :birthday, autofocus: true, autocomplete: "birthday", class: "form-control"   %>
        </div>

        <div class="field">
            <%= f.label :email %><br>
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control"   %>
        </div>
        <div>
            <%= link_to "退会する",user_path(current_user.id), class: "destroy-user",method: :delete %>
        </div>
        <div class="actions pull-right">
          <%= f.submit "更新する", class: "btn btn-primary" %>
        </div>
     <% end %>
</div>