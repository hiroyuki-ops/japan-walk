<div class="container">
	<div class="row-index">
		<% if @post.nil? %>
		    <div class="container"><h2>投稿一覧</h2></div>
			<% @posts.each do |post| %>
				<div class="col-xs-4">
				    <div class="inview">
				    	<%= link_to post_path(post),data: {"turbolinks"=>false} do %>
					        <% if post.post_images.present? %>
							  <% post.post_images.first(1).each do |image| %>
							    <%= attachment_image_tag image, :image, :fill, 250, 250 %>
							  <% end %>
							  <% else %>
							    <%= image_tag 'no_image.jpg', size: '250x250' %>
							<% end %>
						<% end %>
				    </div>
					<div>
						撮影日
						<%= post.shooting_date %>
					</div>
					<div class="comment">
						<%= post.body %>
					</div>
				</div>
			<% end %>
		<% else %>
		    <h4 class="margin-top30">まだこの地域の投稿はありません。</h4>
		<% end %>
	</div>
</div>