<% @post_comments.each do |post_comment| %>
	<tr>
		<td>
			<%= link_to user_path(post_comment.user) do %>
				<%= attachment_image_tag(post_comment.user, :profile_image, :fill, 100, 100, fallback: "no-image-mini.jpg") %><br>
			<%= post_comment.user.name %>
			<% end %>
		</td>
		<td>
          <%= post_comment.comment %>
		</td>
		<% if @user == current_user %>
		<td>
			<%= link_to "Destroy", post_post_comments_path(id: post_comment.id,post_id: @post.id), method: :delete, remote: true, class: "btn-sm btn-danger" %>
		</td>
		<% end %>
	</tr>
<% end %>