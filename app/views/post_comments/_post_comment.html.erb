<div class="post_comment_index">
	<table>
	<% post_comments.each do |post_comment| %>
		<tr>
			<td>
				<%= link_to user_path(post_comment.user) do %>
					<%= attachment_image_tag(post_comment.user, :profile_image, :fill, 50, 50, fallback: "no_image.jpg", class: "rounded-circle") %><br>
				<!--<%= post_comment.user.name %>-->
				<% end %>
			</td>
			<td>
	            <%= post_comment.comment %>
			</td>
			<td>
			    <% if post_comment.user == current_user %>
					<%= link_to "", post_post_comment_path(post_id: post_comment.post_id, id: post_comment.id), method: :delete, remote: true, class: 'fas fa-trash-alt' %>
				<% end %>
			</td>
		</tr>
	<% end %>
    </table>
</div>